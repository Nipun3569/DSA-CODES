#include<iostream>

using namespace std;

int main(){
	int a[50],size;
	
	cout<<"enter size of array"<<endl;
	
	cin>>size;
	
	cout<<"enter elements of array "<<endl;
	
	for(int i=0;i<size;i++){
		cin>>a[i];
	}
	
	cout<<"elements in array are: ";
	
	for(int i=0;i<size;i++){
		cout<<a[i]<<endl;
	}
	
	int min=a[0];
	
	for(int i=0;i<size;i++){
		if(a[i]<min){
			min=a[i];
		}
		
	}
	cout<<"minimum element is "<<min;
}
